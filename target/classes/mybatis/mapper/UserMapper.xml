<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bingo.mapper.UserMapper">

    <select id="queryPatrolList" resultType="User">
        select * from `user` where `type`=1;
    </select>

    <select id="queryUserList" resultType="User">
        select * from `user`;
    </select>

    <select id="queryUserByName" resultType="User">
        select * from user where `name` = #{name};
    </select>

    <insert id="addUser" parameterType="User">
        insert into user(`id`, `name`, `password`, `type`) values(#{id}, #{name}, #{password}, #{type});
    </insert>

    <update id="updateUser" parameterType="User">
        update user set `password` = #{password} where `name` = #{name};
    </update>

</mapper>