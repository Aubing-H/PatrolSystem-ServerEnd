<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bingo.mapper.ConditionItemMapper">
    
    <insert id="addConditionItem" parameterType="ConditionItem">
        insert into condition_item(id, name) values(#{id}, #{name});
    </insert>

    <select id="queryConditionItem" resultType="ConditionItem">
        select * from condition_item;
    </select>

    <select id="queryConditionItemByName" resultType="ConditionItem">
        select * from condition_item where name=#{name};
    </select>

    <delete id="deleteConditionItem" >
        delete from condition_item where 1=1
        <if test="id != null">
            and id = #{id}
        </if>
        <if test="name != null">
            and `name` = #{id}
        </if> ;
    </delete>
</mapper>